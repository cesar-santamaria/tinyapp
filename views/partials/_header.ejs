<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div style="display: flex; flex-direction: row;">
      <!-- logic to display the correct header if user is logged in or logged out. -->
      <% if (user) { %>
        <form method="POST" action="/logout">
          <label class="margin: 1em"> Logged in as: <%= user.email %></label>
          <button type="submit" class="btn btn-md btn-outline-dark" style="margin-right: 3rem;"> Logout </button>
        </form>
        <% } else { %>
          <a type="submit" class="btn btn-md btn-outline-light" style="margin-right: 3rem;" href="/login"> Login </a>
          <a type="submit" class="btn btn-md btn-outline-light" style="margin-right: 3rem;" href="/register"> Register </a>
        <% } %>
    </div>
  </nav>
</header>

